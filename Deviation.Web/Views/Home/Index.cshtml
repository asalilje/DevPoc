@model Deviation.Web.Models.DeviationModel
@{
    ViewBag.Title = "Deviation";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
        </div>
    </section>
}
<h3>Registrerade avvikelser:</h3>

@if (Model.DeviationList == null || !Model.DeviationList.Any()) { <text>Inga avvikelser</text>   }
else
{
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeviationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeviationTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValidFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValidTo)
            </th>
            <th></th>
        </tr>
    
        @foreach (var item in Model.DeviationList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeviationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.DeviationTypes.Single(type => type.Value == item.DeviationTypeId.ToString()).Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidTo)
                </td>
                <td>
                    @using (Html.BeginForm("Delete"))
                    {
                        
                        <input type="submit" value="Ta bort"/>
                        
                    }
                </td>
            </tr>
        }
    
    </table>
}

<br/><br/>

<h3>Skapa ny avvikelse</h3>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Skapa ny avvikelse:</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.DeviationName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DeviationName)
            @Html.ValidationMessageFor(model => model.DeviationName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DeviationTypeId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.DeviationTypeId, Model.DeviationTypes)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ValidFrom)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ValidFrom)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.ValidTo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ValidTo)
            @Html.ValidationMessageFor(model => model.ValidTo)
        </div>
        <p>
            <input type="submit" value="Skapa" />
        </p>
    </fieldset>

}

    
<br/><br/>
<br/><br/>
<br/><br/>
<br/><br/>

